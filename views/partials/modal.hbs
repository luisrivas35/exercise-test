<!-- Modal -->
<article class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Editar Libro</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formularioEditarLibro">
                    <input type="text" hidden name="idLibro">
                    <input required type="text" name="nombre" placeholder="Nombre libro" class="form-control mb-2">
                    <input required type="text" name="autor" placeholder="Autor libro" class="form-control mb-2">
                    <input required type="number" name="precio" placeholder="Precio libro" class="form-control mb-2">
                    <button type="submit" class="btn btn-warning">Editar Libro</button>
                </form>
            </div>
